<div class="container" style="margin-top: 50px;">
    <div class="row">
        <p class="text-end">Hola {{persona}} ! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesión <i
                    class="fas fa-sing-out-alt"></i></a></p>
    </div>

    <div class="row">
        <div class="col-7">
            <h3>Listado de Servicios</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/servicios/agregar"><i class="fa fa-plus"
                    aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>

    <!-- Acá empieza la tabla -->
    <div class="row mt-4">
        <div class="col-12">
            <table class="table table-bordered custom-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre del Servicio</th>
                        <th>Explicación</th>
                        <th>Precio</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each servicios}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{nombre_servicio}}</td>
                        <td>{{descripcion}}</td>
                        <td>${{precio}}</td>
                        <td class="text-end">
                            <a href="/admin/servicios/modificar/{{ id }}" class="btn btn-warning btn-sm"><i
                                    class="fa fa-pencil" aria-hidden="true"></i>Editar</a>
                            <a href="/admin/servicios/eliminar/{{ id }}" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash" aria-hidden="true"></i>Eliminar</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>